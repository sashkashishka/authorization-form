@import "../../pics/icons";

.login-window__header
  box-sizing: border-box
  height $headerHeight
  line-height: $headerHeight
  width 100%
  border-top 2px solid #e62b1e
  position relative


.login-window__title
  font-size: 31px
  color: rgb(51, 51, 51);
  text-align: center
  margin 0

.login-window__exit-button
  background-image: $closePic
  background-repeat: no-repeat
  background-size 14px
  background-color: transparent
  width 14px
  height 14px
  border: none
  position: absolute
  top 0
  right 0
  margin: 15px
  @media all and (max-width $screenWidth)
    margin 10px